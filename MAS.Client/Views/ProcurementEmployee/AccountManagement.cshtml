@section scripts{ 

        $(document).ready(function () {
            table = $("#mytables").DataTable({
                "ajax": {
                    "url": "https://localhost:44329/api/Employee",
                    "datatype": "json",
                    "dataSrc": "data"
                },
                "columnDefs": [
                    {
                        "targets": [0, 1, 2, 3],
                        "searchable": true
                    },
                    {
                        "targets": [6],
                        "searchable": false,
                        "orderable": false
                    }
                ],
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "nik"
                    },
                    {
                        "data": "firstName"
                    },
                    {
                        "data": "lastName"
                    },
                    {
                        "data": "role",
                        "render" : function(role){
                            if (role == 0) {
                                return "Employee";
                            } else if (role == 1) {
                                return "Employee Manager";
                            } else if (role == 2) {
                                return "Procurement Manager";
                            } else if (role == 3) {
                                return "Procurement Employee";
                            }
                        }
                    },
                    {
                        "data": "departmentId"
                    },
                    {
                        "render": function (data, type, row, meta) {
                            return '<a href="javascript:void(0)" class="far fa-edit table-action text-dark" data-toggle="tooltip" data-placement="top" title="Edit" onclick="return GetEmployee(' + row['nik'] + ')"></a>';
                        }
                    }
                ]
            });
        });


        function Update() {            
            var Employee = new Object();
            Employee.NIK = $("#idUpdate").val();
            Employee.role = $("#role").val();
            $('#updateModal').hide();
            $.ajax({
                url: "https://localhost:44342/ProcurementEmployee/UpdateEmployeeRole",
                type: "put",
                data: Employee
            }).done((result) => {
                if (result == 200) {
                    swal({
                        title: "Success!",
                        text: "Data added",
                        icon: "success",
                        button: "Ok",
                    });
                    $('#updateModal').modal('hide');
                    table.ajax.reload();
                } else if (result == 400) {
                    swal("failed to add data", {
                        icon: "warning",
                    });
                } else {
                    swal("failed to add data", {
                        icon: "warning",
                    });
                }
            }).fail((error) => {
                console.log(error);
            });
        }


        function GetEmployee(id) {            
                $.ajax({
                url: 'https://localhost:44342/ProcurementEmployee/GetEmployee',
                data: { id: id }
            }).done((result) => {
                console.log(result);
                var obj = JSON.parse(result);
                $("#updateModal").modal("show");
                $("#idUpdate").val(obj.data.nik);
                $("#firstName").val(obj.data.firstName);
                $("#lastName").val(obj.data.lastName);
                $("#role").val(obj.data.role);
            }).fail((error) => {
                console.log(error);
            });
        }


}