<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="commentForm">
                    <div class="row">
                        <div class="form-group" hidden>
                            <label for="id" class="col-form-label">Id</label>
                            <input type="text" class="form-control" id="idUpdate" name="idUpdate">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="message-text" class="col-form-label">First Name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" required>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="message-text" class="col-form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" required>
                        </div>
                        <div class="form-group col-sm-12">
                            <label for="message-text" class="col-form-label">Role</label>
                            <select id="role" name="role" class="form-control">
                                <option value="0">Employee</option>
                                <option value="1">Employee Manager</option>
                                <option value="2">Procurement Manager</option>
                                <option value="3">Procurement Employee</option>
                            </select>
                            @*<input type="text" class="form-control" id="role" name="role" required>*@
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="buttonsubmit" onclick="Update();">Update</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <table id="mytables" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>No.</th>
                <th>NIK</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>No.</th>
                <th>NIK</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>
</div>

<div class="row">
</div>
<div class="row">
    <div class="col-xl-9 col-lg-7">
        <div class="card shadow mb-4">
        </div>
    </div>
</div>

@section scripts{ 

        $(document).ready(function () {
            table = $("#mytables").DataTable({
                "ajax": {
                    "url": "https://localhost:44329/api/Employee",
                    "datatype": "json",
                    "dataSrc": "data"
                },
                "columnDefs": [
                    {
                        "targets": [0, 1, 2, 3],
                        "searchable": true
                    },
                    {
                        "targets": [6],
                        "searchable": false,
                        "orderable": false
                    }
                ],
                "columns": [
                    {
                        "data": null,
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "nik"
                    },
                    {
                        "data": "firstName"
                    },
                    {
                        "data": "lastName"
                    },
                    {
                        "data": "role",
                        "render" : function(role){
                            if (role == 0) {
                                return "Employee";
                            } else if (role == 1) {
                                return "Employee Manager";
                            } else if (role == 2) {
                                return "Procurement Manager";
                            } else if (role == 3) {
                                return "Procurement Employee";
                            }
                        }
                    },
                    {
                        "data": "departmentId"
                    },
                    {
                        "render": function (data, type, row, meta) {
                            return '<a href="javascript:void(0)" class="far fa-edit table-action text-dark" data-toggle="tooltip" data-placement="top" title="Edit" onclick="return GetEmployee(' + row['nik'] + ')"></a>'  @* +
                                '<a href="javascript:void(0)" class="fa fa-trash table-action text-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return Delete(' + row['nik'] + ')"></a>'*@
                        }
                    }
                ]
            });
        });


        function Update() {
            debugger;
            var Employee = new Object();
            Employee.NIK = $("#idUpdate").val();
            Employee.role = $("#role").val();
            $('#updateModal').hide();
            $.ajax({
                url: "/ProcurementEmployee/UpdateEmployeeRole",
                type: "put",
                data: Employee
            }).done((result) => {
                if (result == 200) {
                    swal({
                        title: "Success!",
                        text: "Data added",
                        icon: "success",
                        button: "Ok",
                    });
                    $('#updateModal').modal('hide');
                    table.ajax.reload();
                } else if (result == 400) {
                    swal("failed to add data", {
                        icon: "warning",
                    });
                } else {
                    swal("failed to add data", {
                        icon: "warning",
                    });
                }
            }).fail((error) => {
                console.log(error);
            });
        }


        function GetEmployee(id) {
            debugger;
                $.ajax({
                url: '/ProcurementEmployee/GetEmployee',
                data: { id: id }
            }).done((result) => {
                console.log(result);
                var obj = JSON.parse(result);
                $("#updateModal").modal("show");
                $("#idUpdate").val(obj.data.nik);
                $("#firstName").val(obj.data.firstName);
                $("#lastName").val(obj.data.lastName);
                $("#role").val(obj.data.role);
            }).fail((error) => {
                console.log(error);
            });
        }


}