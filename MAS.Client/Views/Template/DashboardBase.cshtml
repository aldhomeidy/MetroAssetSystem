<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" href="/dashboard">MetroAssets</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <p id="time-part" class="d-none d-md-inline form-inline ml-0 mr-auto mt-3 text-light"></p>

        <div class="d-none d-md-inline-block form-inline ml-auto mr-0 mt-3">
            <p class="text-light">Welcome, Aldho</p>
        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="https://localhost:44342/employee/profile">Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="https://localhost:44342/employee/logout">Logout</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <!-- start conditional nav menu -->
                    @RenderSection("Menu", required: false)
                    <!-- end conditional nav menu -->
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">MetroAssets Contact:</div>
                    <p class="small mb-0 mt-3"><i class="fas fa-envelope"></i> metroassets@metrodata.co.id</p>
                    <p class="small"><i class="fas fa-phone-square-alt"></i> (0281) 937123</p>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid mt-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="/vendor/moment.js/moment-with-locales.js"></script>
    <script src="/vendor/bootstrap4.6/js/jquery-3.5.1.min.js"></script>
    <script src="/vendor/bootstrap4.6/js/popper.min.js"></script>
    <script src="/vendor/bootstrap4.6/js/bootstrap.min.js"></script>
    <script src="/vendor/sb-admin/js/scripts.js"></script>
    <script src="/vendor/fontawesome5/js/all.min.js"></script>
    @RenderSection("ScriptsLink", required: false)

<script>
        $(document).ready(function () {
            var interval = setInterval(function () {
                var momentNow = moment();
                $('#time-part').html('<i class="far fa-clock"></i> ' + momentNow.format('A hh:mm:ss') + ' <i class="far fa-calendar-alt"></i> ' + momentNow.format('dddd')
                    .substring(0, 3) + ', '
                    + momentNow.format('DD MMMM YYYY'));
            }, 100);
            @RenderSection("ScriptsDocReady", required: false)
        });
    @RenderSection("Scripts", required: false)
</script>
</body>

</html>